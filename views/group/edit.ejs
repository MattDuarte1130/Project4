<%-include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
<div class="page-header">
    <h1 class="text-center">Edit Playlist</h1>
</div>
    <form method="POST" action="/group/<%=idForGroup%>?_method=PUT">
      <div class="centerNewForm">
        <div class="form-group">
          <p class="text-justify"><label for="title">Title</label>
          <input type="text" name="title" id="title" value="<%=idOfGroupToEdit.title%>"/>
        </div>
        <div class="form-group">
          <p class="text-justify"><label for="description">Description</label>
          <input type="textarea" name="description" id="description" value="<%=idOfGroupToEdit.description%>"/>
        </div>
        <div class="form-group">
          <p class="text-justify"><label for="startTime">Start Time</label>
          <input type="time" name="startTime" id="startTime" value="<%=idOfGroupToEdit.startTime%>"/>
        </div>
        <div class="form-group">
          <p class="text-justify"><label for="endTime">End Time</label>
          <input type="time" name="endTime" id="endTime" value="<%=idOfGroupToEdit.endTime%>"/>
        </div>
        <div class="form-group">
          <p class="text-justify"><label for="img">Image</label>
          <input type="text" name="img" id="img" value="<%=idOfGroupToEdit.img%>"/>
        </div>
        <div class="form-group">
          <p class="text-justify"><label for="minMembers">Minimum Members Needed</label>
          <input type="text" name="minMembers" id="minMembers" value="<%=idOfGroupToEdit.minMembers%>"/>
        </div>
        <div class="form-group">
          <p class="text-justify"><label for="maxMembers">Maximum Members Needed</label>
          <input type="text" name="maxMembers" id="maxMembers" value="<%=idOfGroupToEdit.maxMembers%>" />
        </div>
      </div>
            <p class="text-center"><button class="btn btn-info" >Update The Group</button>
          </form>
</div>
<%-include('../partials/footer.ejs') %>
