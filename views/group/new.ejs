<%-include('../partials/header.ejs') %>
<%- include('../partials/nav.ejs') %>
<div class="page-header">
    <h1 class="text-center">Create A Group</h1>
  </div>
    <form action="/group" method="POST">
<div class="centerNewForm">
  <div class="form-group">
    <p class="text-justify"><label for="title">Title</label>
    <input type="text" name="title" id="title" />
  </div>
  <div class="form-group">
    <p class="text-justify"><label for="description">Description</label>
    <input type="textarea" name="description" id="description" />
  </div>
  <div class="form-group">
    <p class="text-justify"><label for="startTime">Start Time</label>
    <input type="time" name="startTime" id="startTime" />
  </div>
  <div class="form-group">
    <p class="text-justify"><label for="endTime">End Time</label>
    <input type="time" name="endTime" id="endTime" />
  </div>
  <div class="form-group">
    <p class="text-justify"><label for="img">Image</label>
    <input type="text" name="img" id="img" />
  </div>
  <div class="form-group">
    <p class="text-justify"><label for="minMembers">Minimum Members Needed</label>
    <input type="text" name="minMembers" id="minMembers" />
  </div>
  <div class="form-group">
    <p class="text-justify"><label for="maxMembers">Maximum Members Needed</label>
    <input type="text" name="maxMembers" id="maxMembers" />
  </div>
</div>
    <p class="text-center"><input class="btn btn-info" type="submit" value="Create Group">
  </form>

<%-include('../partials/footer.ejs') %>
